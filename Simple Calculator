#include <stdio.h>
#include <stdlib.h>

int main()
{

    double num1;
    double num2;
    char op;

    printf  ("Enter first number: ");
    scanf   ("%lf", &num1);
    printf  ("Enter an operator: ");
    // Always put space before character
    scanf   (" %c", &op);
    printf  ("Enter second number: ");
    scanf   ("%lf", &num2);

    if (op == '+')
    {
        printf  ("%f + %f\n", num1, num2);
        printf  ("= %f", num1 + num2);
    }
    else if (op == '-')
    {
        printf  ("%f - %f\n", num1, num2);
        printf  ("= %f", num1 - num2);
    }
    else if (op == 'x' || op == '*')
    {
        printf  ("%f * %f\n", num1, num2);
        printf  ("= %f", num1 * num2);
    }
    else if (op == '/')
    {
        printf  ("%f / %f\n", num1, num2);
        printf  ("= %f", num1 / num2);
    }
    else
    {
        printf  ("Invalid Operator, Please Restart\n");
    }


   return 0;
}
